<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <stroke android:width="1.0px" android:color="@color/white" />

        <gradient android:angle="270.0" android:endColor="#ffcccccc" android:startColor="@color/transparent" />
    </shape></item>

    <item><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="@color/transparent"
            android:startColor="@color/midtransparent" />

        <stroke android:width="1.0px" android:color="@color/white" />
    </shape></item>

</selector>  